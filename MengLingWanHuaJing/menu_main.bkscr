[checkbox index=17 idle=_menuDocument+"window_off" checked=_menuDocument+"window_on" onchanged=["*changeFullScreen",'','callback',"flag=2"] state=!System.fullScreen]
[anchor index=17 set="center" keep=true]
[addto index=17 target=_menu_layer pos=[926,471] zorder=0 opacity=255]
//SoundSetting
[slider index=18 back=_menuDocument+"sliderbar" block=_menuDocument+"slider" onchanged=["*changeBGM",'','call',"value=value"] value=Channel.musicVolume min=0 max=100]
[anchor index=18 set="center" keep=true]
[addto index=18 target=_menu_layer pos=[867,285] zorder=0 opacity=255]
[slider index=19 back=_menuDocument+"sliderbar" block=_menuDocument+"slider" onchanged=["*changeSe",'','call',"value=value"] value=Channel.soundVolume min=0 max=100]
[anchor index=19 set="center" keep=true]
[addto index=19 target=_menu_layer pos=[867,347] zorder=0 opacity=255]
//ExitButton
[button index=25 idle=_menuDocument+"config_back_normal" hover=_menuDocument+"config_back_touch" click=_menuDocument+"config_back_touch" onclick=["*back",'','jump']]
[anchor index=25 set="center" keep=true]
[addto index=25 target=_menu_layer pos=[1011,560]]
[waitbutton]

[return]

//——————————littlemenu——————————
*littlemenu
[call label=*hideTextbox file="ld_extend"]
[layer index=_littlemenu_layer width=System.resolutionSize[0] height=System.resolutionSize[1]]
