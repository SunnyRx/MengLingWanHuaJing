[addto index=13 target=_menu_layer pos=[926,410] zorder=0 opacity=255]
//TextSetting
[slider index=14 back=_menuDocument+"sliderbar" block=_menuDocument+"slider" onchanged=["*changeAutoSpeed",'','call',"value=value"] value=System.autoModeTime min=0 max=100]
